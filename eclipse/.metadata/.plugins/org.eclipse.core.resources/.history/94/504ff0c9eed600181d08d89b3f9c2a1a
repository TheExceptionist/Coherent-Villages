package net.theexceptionist.coherentvillages.main.entity;

import net.minecraft.entity.monster.EntityMob;
import net.minecraft.entity.monster.IMob;
import net.minecraft.util.EnumParticleTypes;
import net.minecraft.world.World;

public class EntityLemure extends EntityMob implements IMob{

	public EntityLemure(World worldIn) {
		super(worldIn);
		// TODO Auto-generated constructor stub
	}

	public void onLivingUpdate()
	{
		super.onLivingUpdate();
		
		this.world.spawnParticle(EnumParticleTypes.CLOUD, this.posX + this.rand.nextGaussian() * 0.12999999523162842D, this.getEntityBoundingBox().maxY - 0.5D - this.rand.nextGaussian() * 0.12999999523162842D, this.posZ + this.rand.nextGaussian() * 0.12999999523162842D, 0.12999999523162842D, 0.0D, 0.0D, new int[0]);
	}
}
