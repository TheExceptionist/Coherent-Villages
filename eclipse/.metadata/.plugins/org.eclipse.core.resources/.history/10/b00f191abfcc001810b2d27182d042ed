package net.theexceptionist.coherentvillages.main.entity.attributes;

import java.util.ArrayList;
import java.util.HashMap;

import net.minecraft.init.Items;
import net.minecraft.item.Item;

public class AttributeRace {	
	//Warrior Race - High Health, Lots of Damage, Nords
	public static final int RACE_TYPE_BARBARIAN = 0;
	//Knight Race - High Armor, has horses, Latins
	public static final int RACE_TYPE_EMPIRE = 1;
	//Archer Race - Good Detection and Speed, Slavs
	public static final int RACE_TYPE_HIGH_BARBARIAN = 2; 
	//Mage Race - Celts
	public static final int RACE_TYPE_FEUDAL = 3;
	//Alchemy Race - Arabs
	public static final int RACE_TYPE_SAND_EMPIRE = 4;
	
	public static final AttributeRace nords = new AttributeRace("Nord", RACE_TYPE_BARBARIAN, 20, 5, 2, 0);
	public static final AttributeRace latins = new AttributeRace("Latin", RACE_TYPE_EMPIRE, 15, 3, 1, 4);
	public static final AttributeRace slavs = new AttributeRace("Slav", RACE_TYPE_HIGH_BARBARIAN, 10, 4, 1, 16);
	public static final AttributeRace celts = new AttributeRace("Celt", RACE_TYPE_FEUDAL, 5, 5, 2, 8);
	public static final AttributeRace arabs = new AttributeRace("Arab", RACE_TYPE_SAND_EMPIRE, 10, 5, 2, 8);
	
	protected String name;
	protected int type;
	protected int healthBonus;
	protected int attackBonus;
	protected int speedBonus;
	protected int detectBonus;
	protected HashMap<String,Item> armor;
	protected HashMap<String,Item> meleeWeapons;
	protected HashMap<String,Item> rangedWeapons;
	protected HashMap<String,Item> spells;
	protected HashMap<String,Item> potions;
	protected ArrayList<AttributeVocation> vocations;
	
	public AttributeRace(final String name, final int type, final int health, final int attack, final int speed, final int detect)
	{
		this.name = name;
		this.type = type;
		this.armor = new HashMap<String,Item>();
		this.meleeWeapons = new HashMap<String,Item>();
		this.rangedWeapons = new HashMap<String,Item>();
		this.spells = new HashMap<String,Item>();
		this.potions = new HashMap<String,Item>();
		
		this.healthBonus = health;
		this.attackBonus = attack;
		this.speedBonus = speed;
		this.detectBonus = detect;
		
		this.vocations = new ArrayList<AttributeVocation>();
		
		this.initByRaceType();
	}
	
	public void initByRaceType()
	{
		switch(type)
		{
			case RACE_TYPE_BARBARIAN:
			{
				this.armor.put("armor_1_head", Items.LEATHER_HELMET);
				this.armor.put("armor_1_chest", Items.LEATHER_CHESTPLATE);
				this.armor.put("armor_1_leg", Items.LEATHER_LEGGINGS);
				this.armor.put("armor_1_feet", Items.LEATHER_BOOTS);
				
				this.armor.put("armor_2_head", Items.LEATHER_HELMET);
				this.armor.put("armor_2_chest", Items.CHAINMAIL_CHESTPLATE);
				this.armor.put("armor_2_leg", Items.CHAINMAIL_LEGGINGS);
				this.armor.put("armor_2_feet", Items.LEATHER_BOOTS);
				
				this.armor.put("armor_3_head", Items.IRON_HELMET);
				this.armor.put("armor_3_chest", Items.CHAINMAIL_CHESTPLATE);
				this.armor.put("armor_3_leg", Items.CHAINMAIL_LEGGINGS);
				this.armor.put("armor_3_feet", Items.CHAINMAIL_BOOTS);
				
				this.meleeWeapons.put("weapon_1", Items.STONE_AXE);
				this.meleeWeapons.put("weapon_2", Items.IRON_AXE);
				this.meleeWeapons.put("weapon_3", Items.IRON_SWORD);
				
				this.rangedWeapons.put("weapon_1", Items.BOW);
				
				AttributeVocation soldierTier1 = new AttributeVocation("Peasant", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				AttributeVocation soldierTier2 = new AttributeVocation("Axeman", AttributeVocation.CLASS_SOLDIER, 1, 10, this);
				AttributeVocation soldierTier3 = new AttributeVocation("Warrior", AttributeVocation.CLASS_SOLDIER, 2, 10, this);
				AttributeVocation soldierTier4 = new AttributeVocation("Huskarl", AttributeVocation.CLASS_SOLDIER, 3, 10, this);
				
				AttributeVocation archerTier1 = new AttributeVocation("Archer", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				
				this.vocations.add(soldierTier1);
				this.vocations.add(soldierTier2);
				this.vocations.add(soldierTier3);
				this.vocations.add(soldierTier4);
				
				this.vocations.add(archerTier1);
			}
			break;
			case RACE_TYPE_EMPIRE:
			{
				this.armor.put("armor_1_head", Items.CHAINMAIL_HELMET);
				this.armor.put("armor_1_chest", Items.CHAINMAIL_CHESTPLATE);
				this.armor.put("armor_1_leg", Items.LEATHER_LEGGINGS);
				this.armor.put("armor_1_feet", Items.LEATHER_BOOTS);
				
				this.armor.put("armor_2_head", Items.CHAINMAIL_HELMET);
				this.armor.put("armor_2_chest", Items.IRON_CHESTPLATE);
				this.armor.put("armor_2_leg", Items.IRON_LEGGINGS);
				this.armor.put("armor_2_feet", Items.IRON_BOOTS);
				
				this.armor.put("armor_3_head", Items.IRON_HELMET);
				this.armor.put("armor_3_chest", Items.DIAMOND_CHESTPLATE);
				this.armor.put("armor_3_leg", Items.DIAMOND_LEGGINGS);
				this.armor.put("armor_3_feet", Items.DIAMOND_BOOTS);
				
				this.meleeWeapons.put("weapon_1", Items.STONE_SWORD);
				this.meleeWeapons.put("weapon_2", Items.IRON_SWORD);
				this.meleeWeapons.put("weapon_3", Items.DIAMOND_SWORD);
				
				this.rangedWeapons.put("weapon_1", Items.BOW);
				
				AttributeVocation soldierTier1 = new AttributeVocation("Legionnaire", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				AttributeVocation soldierTier2 = new AttributeVocation("Legate", AttributeVocation.CLASS_SOLDIER, 1, 10, this, true);
				AttributeVocation soldierTier3 = new AttributeVocation("Champion", AttributeVocation.CLASS_SOLDIER, 2, 10, this, true);

				AttributeVocation archerTier1 = new AttributeVocation("Archer", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				AttributeVocation archerTier2 = new AttributeVocation("Master Archer", AttributeVocation.CLASS_SOLDIER, 0, 10, this, true);
				
				AttributeVocation mageTier1 = new AttributeVocation("Battlemage", AttributeVocation.CLASS_SOLDIER, 0, 10, this, true);
				
				AttributeVocation alchemistTier1 = new AttributeVocation("Healer", AttributeVocation.CLASS_SOLDIER, 0, 10, this, true);
				AttributeVocation alchemistTier2 = new AttributeVocation("Alchemist", AttributeVocation.CLASS_SOLDIER, 0, 10, this, true);
				
				this.vocations.add(soldierTier1);
				this.vocations.add(soldierTier2);
				this.vocations.add(soldierTier3);
				
				this.vocations.add(archerTier1);
				this.vocations.add(archerTier2);
				
				this.vocations.add(mageTier1);
			
				this.vocations.add(alchemistTier1);
				this.vocations.add(alchemistTier2);
			}
			break;
			case RACE_TYPE_HIGH_BARBARIAN:
			{
				this.armor.put("armor_1_head", Items.LEATHER_HELMET);
				this.armor.put("armor_1_chest", Items.LEATHER_CHESTPLATE);
				this.armor.put("armor_1_leg", Items.LEATHER_LEGGINGS);
				this.armor.put("armor_1_feet", Items.LEATHER_BOOTS);
				
				this.armor.put("armor_2_head", Items.CHAINMAIL_HELMET);
				this.armor.put("armor_2_chest", Items.LEATHER_CHESTPLATE);
				this.armor.put("armor_2_leg", Items.LEATHER_LEGGINGS);
				this.armor.put("armor_2_feet", Items.LEATHER_BOOTS);
				
				this.armor.put("armor_3_head", Items.IRON_HELMET);
				this.armor.put("armor_3_chest", Items.IRON_CHESTPLATE);
				this.armor.put("armor_3_leg", Items.IRON_LEGGINGS);
				this.armor.put("armor_3_feet", Items.IRON_BOOTS);
				
				this.meleeWeapons.put("weapon_1", Items.STONE_AXE);
				this.meleeWeapons.put("weapon_2", Items.STONE_SWORD);
				this.meleeWeapons.put("weapon_3", Items.IRON_SWORD);
				
				this.rangedWeapons.put("weapon_1", Items.BOW);
				
				AttributeVocation soldierTier1 = new AttributeVocation("Tribesman", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				AttributeVocation soldierTier2 = new AttributeVocation("Warrior", AttributeVocation.CLASS_SOLDIER, 1, 10, this, true);
				AttributeVocation soldierTier3 = new AttributeVocation("Bogatyr", AttributeVocation.CLASS_SOLDIER, 2, 10, this, true);

				AttributeVocation archerTier1 = new AttributeVocation("Bowman", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				AttributeVocation archerTier2 = new AttributeVocation("Archer", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				AttributeVocation archerTier3 = new AttributeVocation("Mage Archer", AttributeVocation.CLASS_SOLDIER, 0, 10, this, true);
				AttributeVocation archerTier4 = new AttributeVocation("Marksman", AttributeVocation.CLASS_SOLDIER, 0, 10, this, true);
				
				AttributeVocation mageTier1 = new AttributeVocation("Mage Knight", AttributeVocation.CLASS_SOLDIER, 0, 10, this, true);
				
				this.vocations.add(soldierTier1);
				this.vocations.add(soldierTier2);
				this.vocations.add(soldierTier3);
				
				this.vocations.add(archerTier1);
				this.vocations.add(archerTier2);
				
				this.vocations.add(mageTier1);
			}
			break;
			case RACE_TYPE_FEUDAL:
			{
				this.armor.put("armor_1_head", Items.CHAINMAIL_HELMET);
				this.armor.put("armor_1_chest", Items.LEATHER_CHESTPLATE);
				this.armor.put("armor_1_leg", Items.LEATHER_LEGGINGS);
				this.armor.put("armor_1_feet", Items.LEATHER_BOOTS);
				
				this.armor.put("armor_2_head", Items.CHAINMAIL_HELMET);
				this.armor.put("armor_2_chest", Items.CHAINMAIL_CHESTPLATE);
				this.armor.put("armor_2_leg", Items.IRON_LEGGINGS);
				this.armor.put("armor_2_feet", Items.IRON_BOOTS);
				
				this.armor.put("armor_3_head", Items.DIAMOND_HELMET);
				this.armor.put("armor_3_chest", Items.IRON_CHESTPLATE);
				this.armor.put("armor_3_leg", Items.IRON_LEGGINGS);
				this.armor.put("armor_3_feet", Items.IRON_BOOTS);
				
				this.meleeWeapons.put("weapon_1", Items.STONE_SWORD);
				this.meleeWeapons.put("weapon_2", Items.IRON_SWORD);
				this.meleeWeapons.put("weapon_3", Items.DIAMOND_SWORD);
				
				this.rangedWeapons.put("weapon_1", Items.BOW);
				
				AttributeVocation soldierTier1 = new AttributeVocation("Militia", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				AttributeVocation soldierTier2 = new AttributeVocation("Man-At-Arms", AttributeVocation.CLASS_SOLDIER, 1, 10, this, true);
				AttributeVocation soldierTier3 = new AttributeVocation("Knight", AttributeVocation.CLASS_SOLDIER, 2, 10, this, true);

				AttributeVocation archerTier1 = new AttributeVocation("Archer", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				
				AttributeVocation mageTier1 = new AttributeVocation("Mage", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				AttributeVocation mageTier2 = new AttributeVocation("Mage Knight", AttributeVocation.CLASS_SOLDIER, 0, 10, this, true);
				AttributeVocation mageTier3 = new AttributeVocation("Grand Wizard", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
			
				this.vocations.add(soldierTier1);
				this.vocations.add(soldierTier2);
				this.vocations.add(soldierTier3);
				
				this.vocations.add(archerTier1);

				this.vocations.add(mageTier1);
				this.vocations.add(mageTier2);
				this.vocations.add(mageTier3);
			}
			break;
			case RACE_TYPE_SAND_EMPIRE:
			{
				this.armor.put("armor_1_head", Items.LEATHER_HELMET);
				this.armor.put("armor_1_chest", Items.LEATHER_CHESTPLATE);
				this.armor.put("armor_1_leg", Items.LEATHER_LEGGINGS);
				this.armor.put("armor_1_feet", Items.LEATHER_BOOTS);
				
				this.armor.put("armor_2_head", Items.LEATHER_HELMET);
				this.armor.put("armor_2_chest", Items.IRON_CHESTPLATE);
				this.armor.put("armor_2_leg", Items.IRON_LEGGINGS);
				this.armor.put("armor_2_feet", Items.IRON_BOOTS);
				
				this.armor.put("armor_3_head", Items.LEATHER_HELMET);
				this.armor.put("armor_3_chest", Items.DIAMOND_CHESTPLATE);
				this.armor.put("armor_3_leg", Items.DIAMOND_LEGGINGS);
				this.armor.put("armor_3_feet", Items.DIAMOND_BOOTS);
				
				this.meleeWeapons.put("weapon_1", Items.STONE_SWORD);
				this.meleeWeapons.put("weapon_2", Items.IRON_SWORD);
				this.meleeWeapons.put("weapon_3", Items.DIAMOND_SWORD);
				
				this.rangedWeapons.put("weapon_1", Items.BOW);
				
				AttributeVocation soldierTier1 = new AttributeVocation("Peasant", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				AttributeVocation soldierTier2 = new AttributeVocation("Footman", AttributeVocation.CLASS_SOLDIER, 1, 10, this);
				AttributeVocation soldierTier3 = new AttributeVocation("Mamluke", AttributeVocation.CLASS_SOLDIER, 2, 10, this);

				AttributeVocation archerTier1 = new AttributeVocation("Archer", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				AttributeVocation archerTier2 = new AttributeVocation("Sharpshooter", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				
				AttributeVocation mageTier1 = new AttributeVocation("Conjurer", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				
				AttributeVocation alchemistTier1 = new AttributeVocation("Alchemist Undead Hunter", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				AttributeVocation alchemistTier2 = new AttributeVocation("Alchemist Potion Master", AttributeVocation.CLASS_SOLDIER, 0, 10, this);
				
				this.vocations.add(soldierTier1);
				this.vocations.add(soldierTier2);
				this.vocations.add(soldierTier3);
				
				this.vocations.add(archerTier1);
				this.vocations.add(archerTier2);
				
				this.vocations.add(mageTier1);
			
				this.vocations.add(alchemistTier1);
				this.vocations.add(alchemistTier2);
			}
			break;
		}
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getType() {
		return type;
	}

	public void setType(int type) {
		this.type = type;
	}

	public HashMap<String, Item> getArmor() {
		return armor;
	}

	public void setArmor(HashMap<String, Item> armor) {
		this.armor = armor;
	}

	public HashMap<String, Item> getMeleeWeapons() {
		return meleeWeapons;
	}

	public void setMeleeWeapons(HashMap<String, Item> meleeWeapons) {
		this.meleeWeapons = meleeWeapons;
	}

	public HashMap<String, Item> getRangedWeapons() {
		return rangedWeapons;
	}

	public void setRangedWeapons(HashMap<String, Item> rangedWeapons) {
		this.rangedWeapons = rangedWeapons;
	}

	public HashMap<String, Item> getSpells() {
		return spells;
	}

	public void setSpells(HashMap<String, Item> spells) {
		this.spells = spells;
	}

	public HashMap<String, Item> getPotions() {
		return potions;
	}

	public void setPotions(HashMap<String, Item> potions) {
		this.potions = potions;
	}

	public int getHealthBonus() {
		return healthBonus;
	}

	public void setHealthBonus(int healthBonus) {
		this.healthBonus = healthBonus;
	}

	public int getAttackBonus() {
		return attackBonus;
	}

	public void setAttackBonus(int attackBonus) {
		this.attackBonus = attackBonus;
	}

	public int getSpeedBonus() {
		return speedBonus;
	}

	public void setSpeedBonus(int speedBonus) {
		this.speedBonus = speedBonus;
	}

	public int getDetectBonus() {
		return detectBonus;
	}

	public void setDetectBonus(int detectBonus) {
		this.detectBonus = detectBonus;
	}

	public ArrayList<AttributeVocation> getVocations() {
		return vocations;
	}

	public void setVocations(ArrayList<AttributeVocation> vocations) {
		this.vocations = vocations;
	}
}
