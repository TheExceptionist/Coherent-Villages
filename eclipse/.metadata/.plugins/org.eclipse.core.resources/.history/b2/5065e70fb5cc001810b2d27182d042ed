package net.theexceptionist.coherentvillages.main.entity.attributes;

import java.util.ArrayList;

import net.minecraft.item.ItemStack;

public class AttributeRace {	
	//Warrior Race
	public static final int RACE_TYPE_WARRIOR = 0;
	//Knight Race
	public static final int RACE_TYPE_KNIGHT = 1;
	//Archer Race
	public static final int RACE_TYPE_ARCHER = 2;
	//Mage Race
	public static final int RACE_TYPE_MAGE = 3;
	//Alchemy Race
	public static final int RACE_TYPE_ALCHEMY = 4;
	
	
	
	protected String name;
	protected int type;
	protected ArrayList<ItemStack> armor;
	protected ArrayList<ItemStack> meleeWeapons;
	protected ArrayList<ItemStack> rangedWeapons;
	protected ArrayList<ItemStack> spells;
	protected ArrayList<ItemStack> potions;
	protected ArrayList<AttributeVocation> vocations;
	
	public AttributeRace(final String name, final int type)
	{
		this.name = name;
		this.type = type;
		this.armor = new ArrayList<ItemStack>();
		this.meleeWeapons = new ArrayList<ItemStack>();
		this.rangedWeapons = new ArrayList<ItemStack>();
		this.spells = new ArrayList<ItemStack>();
		this.potions = new ArrayList<ItemStack>();
		
		this.vocations = new ArrayList<AttributeVocation>();
	}
	
	public void initEquipmentByRaceType()
	{
		switch(type)
		{
		case RACE_TYPE_WARRIOR:
		{
			
		}
		break;
		}
	}
	
	public void initVocationByRaceType()
	{
		
	}
}
