		Village village = ruler.getVillage();
		
		if(ruler == null || village == null)
		{
			success = false;
		}
		else 
		{
			for(int i = 0; i < count; i++)
			{
				
			}
		}
		
		return success;
	}

	@Override
	public void reset(boolean day) {
		// TODO Auto-generated method stub
		
	}

}
