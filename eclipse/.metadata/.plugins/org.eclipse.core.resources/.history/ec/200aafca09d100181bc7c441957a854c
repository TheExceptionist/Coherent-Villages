package net.theexceptionist.coherentvillages.main.events;

import java.util.Random;

import net.minecraft.util.math.BlockPos;

public class EventBanditSkirmish extends Event {
	public EventBanditSkirmish(Random rand, boolean startInDay, int chance) {
		super(rand, startInDay, chance);
	}

	@Override
	public void execute() {
		int count = this.rand.nextInt(4) + 2;
		if(this.player != null)
		{
			BlockPos spawn = new BlockPos();
		}
		else 
		{
			return;
		}
	}

	@Override
	public void reset() {
		if(this.player != null && this.player.world.isDaytime() != startInDay)
		{
			this.spawned = false;
		}
	}

}
